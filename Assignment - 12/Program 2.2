package packtwo;

import packone.MyClassInPackOne; // Import the class from packone

/**
 * This class attempts to access members of MyClassInPackOne (from packone)
 * to demonstrate the rules of access modifiers across different packages.
 */
public class AccessChecker {

    public static void main(String[] args) {
        System.out.println("--- Attempting to access members of MyClassInPackOne from packtwo.AccessChecker ---");

        MyClassInPackOne obj = new MyClassInPackOne(); // Create an object of MyClassInPackOne

        // --- Accessing Public Members ---
        System.out.println("\n1. Public Members:");
        System.out.println("  Accessing publicVar: " + obj.publicVar); // Accessible
        obj.publicMethod(); // Accessible

        // --- Accessing Private Members ---
        System.out.println("\n2. Private Members:");
        // obj.privateVar = 25; // COMPILE ERROR: privateVar has private access in packone.MyClassInPackOne
        // obj.privateMethod(); // COMPILE ERROR: privateMethod() has private access in packone.MyClassInPackOne
        System.out.println("  Private members are NOT directly accessible from another package/class.");
        obj.demonstrateInternalAccess(); // Can access through a public method in the original class

        // --- Accessing Protected Members ---
        System.out.println("\n3. Protected Members:");
        // obj.protectedVar = 35; // COMPILE ERROR: protectedVar has protected access in packone.MyClassInPackOne
        // obj.protectedMethod(); // COMPILE ERROR: protectedMethod() has protected access in packone.MyClassInPackOne
        System.out.println("  Protected members are NOT directly accessible from a non-subclass in another package.");
        System.out.println("  (Access is possible via inheritance, as shown in SubClassInPackTwo below)");

        // --- Accessing Default (Package-Private) Members ---
        System.out.println("\n4. Default (Package-Private) Members:");
        // obj.defaultVar = 45; // COMPILE ERROR: defaultVar is not public in packone.MyClassInPackOne; cannot be accessed from outside package
        // obj.defaultMethod(); // COMPILE ERROR: defaultMethod() is not public in packone.MyClassInPackOne; cannot be accessed from outside package
        System.out.println("  Default members are NOT accessible from another package.");

        System.out.println("\n--- End of direct access demonstration from packtwo.AccessChecker ---");
    }
}

