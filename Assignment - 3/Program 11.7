import java.util.Scanner; // Import the Scanner class to read user input

public class PyramidStarPattern {

    public static void main(String[] args) {
        // Create a Scanner object to get input from the console
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter the number of rows for the pyramid star pattern: ");

        // Read the integer input from the user for the number of rows
        int numRows = scanner.nextInt();

        // Validate input: ensure the number of rows is positive
        if (numRows <= 0) {
            System.out.println("Please enter a positive number of rows.");
        } else {
            System.out.println("\nHere is your pyramid star pattern:");

            // Outer loop: controls the number of rows
            // 'i' represents the current row number (from 1 to numRows)
            for (int i = 1; i <= numRows; i++) {
                // Inner loop 1: prints leading spaces
                // The number of spaces decreases with each row, creating the pyramid shape.
                // For row 'i', print (numRows - i) spaces.
                for (int j = 1; j <= numRows - i; j++) {
                    System.out.print(" "); // Print a space
                }

                // Inner loop 2: prints stars
                // The number of stars increases with each row, following the pattern 1, 3, 5, ...
                // For row 'i', print (2 * i - 1) stars.
                for (int k = 1; k <= (2 * i - 1); k++) {
                    System.out.print("*"); // Print a star
                }
                System.out.println(); // Move to the next line after printing spaces and stars for the current row
            }
        }

        // Close the scanner to prevent resource leaks
        scanner.close();
    }
}
