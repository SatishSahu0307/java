import java.util.*;
public class IncreasingDifferencePattern {

    public static void main(String[] args) {
        System.out.println("Printing pattern: 1 3 7 13 21 ...");

        int currentNumber = 1; // The first number in the pattern
        int differenceToAdd = 2; // The initial difference to add to the current number

        // Loop as long as the current number is less than or equal to 100
        while (currentNumber <= 100) {
            System.out.print(currentNumber + " "); // Print the current number

            // Calculate the next number in the sequence
            currentNumber += differenceToAdd;

            // Increase the difference for the next iteration by 2
            differenceToAdd += 2;
        }
        System.out.println(); // Print a new line at the end for better formatting
    }
}
